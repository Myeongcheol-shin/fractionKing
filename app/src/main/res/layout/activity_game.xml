<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="gameActivity"
            type="com.shino72.fractionking.game.GameViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_margin="50sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/scoreLL"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/blackboard"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="score : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/score"
                android:fontFamily="@font/blackboard"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/leftFraction"
            app:layout_constraintRight_toLeftOf="@id/question"
            app:layout_constraintTop_toBottomOf="@+id/scoreLL"
            app:layout_constraintLeft_toLeftOf="parent"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:text="6"
                android:textSize="60sp"
                android:textColor="@color/white"
                android:fontFamily="@font/blackboard"
                android:id="@+id/leftDm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="6sp"/>
            <TextView
                android:layout_gravity="center"
                android:textSize="60sp"
                android:text="2"
                android:textColor="@color/white"
                android:fontFamily="@font/blackboard"
                android:id="@+id/leftNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:background="@drawable/baseline_question_mark_24"
            app:layout_constraintTop_toBottomOf="@+id/scoreLL"
            app:layout_constraintBottom_toBottomOf="@+id/leftFraction"
            app:layout_constraintRight_toLeftOf="@+id/rightFraction"
            app:layout_constraintLeft_toRightOf="@id/leftFraction"
            android:id="@+id/question"
            android:layout_width="50sp"
            android:layout_height="50sp"/>
        <LinearLayout
            android:id="@+id/rightFraction"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scoreLL"
            app:layout_constraintLeft_toRightOf="@id/question"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:text="6"
                android:textSize="60sp"
                android:textColor="@color/white"
                android:fontFamily="@font/blackboard"
                android:id="@+id/rightDm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="6sp"/>
            <TextView
                android:layout_gravity="center"
                android:textSize="60sp"
                android:text="2"
                android:textColor="@color/white"
                android:fontFamily="@font/blackboard"
                android:id="@+id/rightNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/left"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/transparent"
                android:gravity="center"
                android:text="&gt;"
                android:onClick="@{()->gameActivity.leftButton()}"
                android:textColor="@color/white"
                android:textSize="40sp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/equal"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/transparent"
                android:gravity="center"
                android:text="="
                android:onClick="@{()->gameActivity.sameButton()}"
                android:textColor="@color/white"
                android:textSize="40sp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/right"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/transparent"
                android:gravity="center"
                android:text="&lt;"
                android:onClick="@{()->gameActivity.rightButton()}"
                android:textColor="@color/white"
                android:textSize="40sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>